{
    "description": "UE5 Python development workflow hooks",
    "hooks": {
        "SessionStart": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python \"${CLAUDE_PLUGIN_ROOT}/hooks/session_start_ue5_setup.py\"",
                        "timeout": 15
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "Write|Edit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python \"${CLAUDE_PLUGIN_ROOT}/hooks/check_ue5_python.py\"",
                        "timeout": 10
                    }
                ]
            }
        ]
    }
}
